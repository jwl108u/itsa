#include<stdio.h>    
#include<stdlib.h>    
    
int main()    
{    
    int i,count;    
    char N[10],M[10];    
    while(scanf("%s %s",N,M)!=EOF)    
    {    
        count=0;    
        for(i=0;i<=5;i++)    
        {    
            if(N[0]==M[i]&&N[1]==M[i+1])    
            {    
                count++;    
            }    
        }    
        printf("%d\n",count);    
    }    
    return 0;    
}  
